<div>

  <h1>Productos</h1>

  <div
    class="card-group mx-auto text-decoration-none d-flex flex-wrap justify-content-center"
    id="products-container"
  >
    {{#each products}}

      <div class="card ms-3" style="width:200px;" id={{this._id}}>
        <img
          class="card-img-top img-fluid"
          src={{this.foto}}
          alt="Card image cap"
          style="width: 150px;"
        />
        <div class="card-body">
          <h5 class="card-title">{{this.nombre}}</h5>
          <p class="h4">${{this.precio}}</p>
        </div>
        <button
          type="button"
          class="btn btn-primary articulo__boton-compra"
        >Agregar al carrito</button>
      </div>

    {{/each}}
  </div>

  <h1>Carrito</h1>

  <table class="table table-dark">
    <thead>
      <tr>

        <th scope="col">Foto</th>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
      </tr>
    </thead>
    <tbody id="tablaCarrito">
    </tbody>
  </table>

  <button
    id="botonCompra"
    type="button"
    class="btn btn-primary"
  >Comprar</button>
  <button id="botonVaciarCarrito" type="button" class="btn btn-primary">Vaciar
    Carrito</button>
</div>